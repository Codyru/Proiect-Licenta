<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PasaportPickerFragment">

    <ImageView
        android:id="@+id/ivPicPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnPicSelect"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnPicSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_pick"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNationalitateValidate"/>

    <Button
        android:id="@+id/btnNationalitateValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Val. nation."
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPicSelect"/>



</androidx.constraintlayout.widget.ConstraintLayout>