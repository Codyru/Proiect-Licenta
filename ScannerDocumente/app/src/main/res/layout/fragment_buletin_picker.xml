<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BuletinPickerFragment">

        <Button
            android:id="@+id/btnImageSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_pick"
            app:layout_constraintBottom_toTopOf="@id/btnDataExpirare"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintRight_toLeftOf="@id/btnValidate"
            />
        <Button
            android:id="@+id/btnValidate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnDataExpirare"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Cnp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toRightOf="@id/btnImageSelect"/>

        <Button
            android:id="@+id/btnDataExpirare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Data expirare"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/btnImageSelect"/>

        <Button
            android:id="@+id/btnSerie"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Serie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btnValidate"
            app:layout_constraintStart_toStartOf="@id/btnValidate"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ivPicturePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnValidate"
            app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>